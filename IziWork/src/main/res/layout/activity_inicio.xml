<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="272dp"
        android:layout_height="79dp"
        android:text="Geovanni Aguilar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintVertical_bias="0.037" android:textSize="33sp" android:id="@+id/name"
        android:textAlignment="center"/>
    <TextView
        android:text="Tus preferencias son..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/preferencias" android:textSize="30sp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/name" app:layout_constraintHorizontal_bias="0.507"/>
    <CheckBox
        android:text="Educación"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxEdu" android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/preferencias" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.122"/>
    <CheckBox
        android:text="Jardinería"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2" android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxEdu" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.122"/>
    <CheckBox
        android:text="Animales"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox3" android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox2" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.122"/>
    <RadioButton
        android:text="Fines de semana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp"
        android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/preferencias"
        app:layout_constraintStart_toEndOf="@+id/checkBoxEdu" android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="0.964"/>
    <RadioButton
        android:text="Entre 10:00 y 18:00 horas"
        android:layout_width="135dp"
        android:layout_height="43dp"
        android:id="@+id/radioButton2" android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/radioButton" app:layout_constraintStart_toEndOf="@+id/checkBox2"
        android:layout_marginStart="64dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0"/>
    <Button
        android:text="Mostrar más"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button" android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/radioButton2" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/checkBox3"
        android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.686" android:onClick="goHorario"/>
    <Button
        android:text="Buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/button"
        android:onClick="goWorks"/>
    <ImageButton
        android:layout_width="77dp"
        android:layout_height="79dp" tools:srcCompat="@tools:sample/avatars[0]"
        android:id="@+id/imageButton2"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@+id/name" android:layout_marginStart="8dp"
        android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.333" android:onClick="goPerfil"/>

</android.support.constraint.ConstraintLayout>