<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Horario">

    <TextView
        android:layout_width="272dp"
        android:layout_height="79dp"
        android:text="Geovanni Aguilar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.071"
        android:textSize="33sp" android:id="@+id/name2"
        android:textAlignment="center" android:layout_marginTop="16dp"/>
    <ImageView
        android:layout_width="79dp"
        android:layout_height="80dp" tools:srcCompat="@tools:sample/avatars"
        android:id="@+id/image2" android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/name2" app:layout_constraintVertical_bias="0.111"
        app:layout_constraintStart_toEndOf="@+id/name2" android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="8dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="368dp"
        android:layout_height="179dp" tools:layout_editor_absoluteX="8dp" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/name2">
        <TextView
            android:text="Días de la semana:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:textSize="24sp"
            tools:layout_editor_absoluteY="215dp" tools:layout_editor_absoluteX="7dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:text="Lunes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/checkBox4" android:layout_weight="1"/>
            <CheckBox
                android:text="Martes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/checkBox5" android:layout_weight="1"/>
            <CheckBox
                android:text="Miércoles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/checkBox6" android:layout_weight="1"/>
            <CheckBox
                android:text="Jueves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/checkBox7" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1">
            <CheckBox
                android:text="Viernes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/checkBox8" android:layout_weight="1"/>
            <CheckBox
                android:text="Sábado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/checkBox9" android:layout_weight="1"/>
            <CheckBox
                android:text="Domingo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/checkBox10" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>